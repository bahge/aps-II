<main class="container-fluid">
    <div class="row">
        <nav>
            <div class="col s12">
                <a href="<?= URL ?>/admin" class="breadcrumb">Painel</a>
                <a class="breadcrumb">Assuntos</a>
                <a class="breadcrumb">Gerenciar</a>
            </div>
        </nav>
    </div>

    <div class="container">
        <div class="row">
            <div class="s12">
                <table id="records_table">
                    <thead>
                    <tr>
                        <th>Descrição</th>
                    </tr>
                    </thead>

                </table>
            </div>
        </div>
    </div>
</main>

<div id="confirmDelete" class="modal">
    <div class="modal-content">
        <h2>Apagar</h2>
        <div id="messageDelete">Mensagem</div>
    </div>
</div>

<script>

    $(document).ready(function(){
        $('.modal').modal();
        $.ajax({
            type: 'GET',
            url: '<?= URL ?>/subjects' ,
            dataType: 'json',
            success: function (response) {
                var trHTML = '<tbody>';
                $.each(response, function (i, item) {
                    trHTML += '<tr><td>';
                    trHTML += item.assunto;
                    trHTML += '</td><td>';
                    trHTML += '<a href="<?= URL ?>/assunto/editar/' + item.id + '" class="waves-effect waves-light btn">';
                    trHTML += '<i class="material-icons left">edit</i>Editar</a> ';
                    trHTML += `<button onclick="openModalConfirmDelete('${item.assunto}', '${item.id}')" id="${item.id}" class="waves-effect waves-light btn">`;
                    trHTML += '<i class="material-icons left">delete</i>Apagar</button>';
                    trHTML += '</td></tr>';
                });
                trHTML += '</tbody>';
                $('#records_table').append(trHTML);
            }
        });
    });

    function openModalConfirmDelete(assunto, id) {
        var message = `<p>Deseja apagar o assunto: <strong>${assunto}</strong></p>`;
        message += '<br><br>';
        message += '<div class="right-align">';
        message += `<a onclick="$('#confirmDelete').modal('close');" class="waves-effect waves-light btn red lighten-3">Não</a> `;
        message += `<a onclick="deleteAccepted(${id})" class="waves-effect waves-light btn">Sim</a>`;
        message += '</div>';
        document.querySelector("#messageDelete").innerHTML = message;
        $('#confirmDelete').modal('open');
    }

    function deleteAccepted(idDel){
        var formData = JSON.stringify({ id: idDel });
        var posting = $.post( "<?= URL . '/delete-subject' ?>", formData);
        posting.done(function( data ) {
            console.log(data);
            if (data.aviso == 'Assunto apagado') {
                $('#confirmDelete').modal('close');
                M.toast({html: data.aviso, classes: 'rounded'});
                setTimeout(function() {
                    window.location.href = "<?= URL ?>/assunto/gerenciar";
                }, 1000);
            } else {
                $('#confirmDelete').modal('close');
                M.toast({html: 'Erro' + data.aviso, classes: 'rounded'});
            }

        });
    }


</script>